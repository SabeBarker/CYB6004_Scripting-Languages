	"Add Shebang": {
		"scope": "sh",
		"prefix": "#!",
		"body": [
			"#!/bin/bash"
		],
		"description": "Add shebang to script"
	},

	"Add Colour": {
		"scope": "sh",
		"prefix": "add_colours",
		"body": [
			"BLACK='\\e[30m'",
			"RED='\\e[31m'",
			"GREEN='\\e[32m'",
			"BROWN='\\e[33m'",
			"BLUE='\\e[34m'",
			"PURPLE='\\e[35m'",
			"CYAN='\\e[36m'",
			"GREY='\\e[37m'",
			"ENDCOLOUR='\\e[0m'"
		],
	},

	"Add Case Statement": {
		"scope": "sh",
		"prefix": "case",
		"body": [
			"case \\$var in",
			"	{testitems} )",
			"		# code if match",
			"		;;",
			"	{testitems} )",
			"		# code if match",
			"		;;",
			"	{testitems} )",
			"		# code if match",
			"		;;",
			"	*) # default case",
			"		code if default case",
			"		;;",
			"esac"
		],
		"description": "Add case statement structure"
	}